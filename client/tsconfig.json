{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/apollo": [
        "./apollo"
      ],
      "@/apollo/*": [
        "./apollo/*"
      ],
      "@/app": [
        "./app"
      ],
      "@/app/*": [
        "./app/*"
      ],
      "@/components": [
        "./components"
      ],
      "@/components/*": [
        "./components/*"
      ],
      "@/context": [
        "./context"
      ],
      "@/context/*": [
        "./context/*"
      ],
      "@/assets": [
        "./assets"
      ],
      "@/assets/*": [
        "./assets/*"
      ],
      "@/hooks": [
        "./hooks"
      ],
      "@/hooks/*": [
        "./hooks/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
